{
    "name": "rhamt-vscode-extension",
    "displayName": "rhamt-vscode-extension",
    "description": "Red Hat Application Migration Toolkit",
    "version": "0.0.1",
    "license": "MIT",
    "publisher": "redhat",
    "author": "Red Hat",
    "preview": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/windup/rhamt-vscode-extension"
    },
    "bugs": "https://github.com/windup/rhamt-vscode-extension/issues",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Migration",
        "RHAMT",
        "Windup",
        "JBoss",
        "Analyze"
    ],
    "activationEvents": [
        "onCommand:rhamt.createConfiguration",
        "onCommand:rhamt.showRhamtExplorer",
        "onView:rhamtExplorerView"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "clean": "rm -rf out || rmdir out /s /q",
        "test": "npm run clean && npm run compile && node ./node_modules/vscode/bin/test",
        "update-deps": "node_modules/.bin/ncu --upgrade --loglevel verbose --packageFile package.json && npm update",
        "coverage:upload": "codecov -f coverage/coverage-final.json",
        "build": "npm run clean && tslint -p tslint.json && npm run compile"
    },
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "rhamt.createConfiguration",
                "title": "Create configuration"
            },
            {
                "command": "rhamt.showRhamtExplorer",
                "title": "Show RHAMT Explorer"
            },
            {
                "command": "rhamt.openRhamtConfiguration",
                "title": "Open RHAMT Configuration"
            }
        ],
        "configuration": [
            {
                "title": "Red Hat Application Migration Toolkit (RHAMT)",
                "properties": {
                    "rhamt.executable.path": {
                        "type": "string",
                        "default": "",
                        "description": "Specifies absolute path of rhamt-cli executable",
                        "scope": "window"
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "rhamt-explorer",
                    "title": "RHAMT",
                    "icon": "resources/dep.svg"
                }
            ]
        },
        "views": {
            "rhamt-explorer": [
                {
                    "id": "rhamtExplorerView",
                    "name": "Issue Explorer"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.6",
        "@types/fs-extra": "^5.0.4",
        "@types/node": "^7.0.43",
        "@types/sinon": "^5.0.7",
        "@types/sinon-chai": "^3.2.2",
        "vscode": "^1.1.6",
        "typescript": "^3.3.3333",
        "sinon": "^7.2.7",
        "sinon-chai": "^3.3.0",
        "chai": "^4.2.0"
    },
    "dependencies": {
        "find-java-home": "^0.2.0",
        "fs-extra": "^6.0.1",
        "vscode-nls": "^2.0.2"
    }
}

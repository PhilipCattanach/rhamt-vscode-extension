{
    "name": "rhamt-vscode-extension",
    "displayName": "rhamt-vscode-extension",
    "description": "Red Hat Application Migration Toolkit",
    "version": "0.0.1",
    "author": "Red Hat Developers",
    "repository": {
        "type": "git",
        "url": "https://github.com/windup/rhamt-vscode-extension"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Migration",
        "RHAMT",
        "Windup",
        "JBoss",
        "Analyze"
    ],
    "activationEvents": [
        "onCommand:rhamt.createConfiguration",
        "onCommand:rhamt.showRhamtExplorer",
        "onView:rhamtExplorerView"
    ],
    "scripts": {
        "prepare": "npm run build",
        "build": "tsc",
        "unit-test": "mocha --require ts-node/register test/**/*.ts"
    },
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "rhamt.createConfiguration",
                "title": "Create configuration"
            },
            {
                "command": "rhamt.showRhamtExplorer",
                "title": "Show RHAMT Explorer"
            },
            {
                "command": "rhamt.openRhamtConfiguration",
                "title": "Open RHAMT Configuration"
            }
        ],
        "configuration": [
            {
                "title": "Red Hat Application Migration Toolkit (RHAMT)",
                "properties": {
                    "rhamt.executable.path": {
                        "type": "string",
                        "default": "",
                        "description": "Specifies absolute path of rhamt-cli executable",
                        "scope": "window"
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "rhamt-explorer",
                    "title": "RHAMT",
                    "icon": "resources/dep.svg"
                }
            ]
        },
        "views": {
            "rhamt-explorer": [
                {
                    "id": "rhamtExplorerView",
                    "name": "Issue Explorer"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.6",
        "@types/fs-extra": "^5.0.4",
        "@types/node": "^7.0.43",
        "vscode": "^1.1.6",
        "typescript": "^3.3.3333"
    },
    "dependencies": {
        "find-java-home": "^0.2.0",
        "fs-extra": "^6.0.1",
        "vscode-nls": "^2.0.2"
    }
}
